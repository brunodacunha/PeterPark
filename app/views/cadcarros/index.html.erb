<h1>Listing cadcarros</h1>

<table>
  <thead>
    <tr>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Cor</th>
      <th>Placa</th>
      <th>Ano</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cadcarros.each do |cadcarro| %>
      <tr>
        <td><%= cadcarro.marca %></td>
        <td><%= cadcarro.modelo %></td>
        <td><%= cadcarro.cor %></td>
        <td><%= cadcarro.placa %></td>
        <td><%= cadcarro.ano %></td>
        <td><%= link_to 'Show', cadcarro %></td>
        <td><%= link_to 'Edit', edit_cadcarro_path(cadcarro) %></td>
        <td><%= link_to 'Destroy', cadcarro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cadcarro', new_cadcarro_path %>
