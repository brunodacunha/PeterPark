<%= form_for(@cadcarro) do |f| %>
  <% if @cadcarro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cadcarro.errors.count, "erros") %> encontrados para proseguir, verifique os dados abaixo:</h2>

      <ul>
      <% @cadcarro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :marca %><br>
    <%= f.text_field :marca %>
  </div>
  <div class="field">
    <%= f.label :modelo %><br>
    <%= f.text_field :modelo %>
  </div>
  <div class="field">
    <%= f.label :cor %><br>
    <%= f.text_field :cor %>
  </div>
  <div class="field">
    <%= f.label :placa %><br>
    <%= f.text_field :placa %>
  </div>
  <div class="field">
    <%= f.label :ano %><br>
    <%= f.text_field :ano %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
