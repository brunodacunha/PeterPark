<%= form_for(@controle) do |f| %>
  <% if @controle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@controle.errors.count, "erros") %> encontrados para proseguir, verifique os dados abaixo:</h2>

      <ul>
      <% @controle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :placa %><br>
    <%= f.text_field :placa %>
  </div>
  <div class="field">
    <%= f.label :hora_entrada %><br>
    <%= f.text_field :hora_entrada %>
  </div>
  <div class="field">
    <%= f.label :hora_saida %><br>
    <%= f.text_field :hora_saida %>
  </div>
  <div class="field">
    <%= f.label :total %><br>
    <%= f.text_field :total %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
