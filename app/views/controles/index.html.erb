<h1>Listing controles</h1>

<table>
  <thead>
    <tr>
      <th>Placa</th>
      <th>Hora entrada</th>
      <th>Hora saida</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controles.each do |controle| %>
      <tr>
        <td><%= controle.placa %></td>
        <td><%= controle.hora_entrada %></td>
        <td><%= controle.hora_saida %></td>
        <td><%= controle.total %></td>
        <td><%= link_to 'Show', controle %></td>
        <td><%= link_to 'Edit', edit_controle_path(controle) %></td>
        <td><%= link_to 'Destroy', controle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Controle', new_controle_path %>
